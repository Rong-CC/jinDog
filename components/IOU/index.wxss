/* components/IOU/index.wxss */
.popupDom{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
  z-index: 22;
  top: 0;
}

.pop_main{
  position: absolute;
  bottom: 0;
  width: 100%;
  min-height: 600rpx;
  max-height: 800rpx;
  background-color: #fff;
  font-size: 26rpx;
}
.pop_header{
  height: 80rpx;
  line-height: 80rpx;
  background: #F2EEF8;
  font-weight: 700;
  position: relative;
  font-size: 28rpx;
}
.pop_header text{
  text-align: right;
  position: absolute;
  right: 20rpx;
}
.pop_body{
  margin-bottom: 100rpx;
  /* overflow: auto; */
  max-height: 720rpx;
  overflow: auto;
  padding: 40rpx 20rpx;
  color: #333;
  font-size: 24rpx;
}
.section_item{
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  padding: 10rpx 0rpx;
}
.detail{
  display: flex;
  flex-direction: column;
}
.detail .tip{
  display: block;
  margin-top: 6rpx;
  color: #999;
}
.section_item image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx; 
}
.pop_footer{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0;
  width: 100%;
}
.pop_footer button {
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
  background: #e4393c;
  color: #fff;
  width: 100%;
}